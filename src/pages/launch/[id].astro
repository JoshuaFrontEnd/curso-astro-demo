---
import { getLatestLaunches, getLaunchBy } from '../../services/spacex';

const { id } = Astro.params;

let launch;
if (id) {
  launch = await getLaunchBy({ id });
}

// Cuando tengo el total de paginas que voy a generar puedo usar getStaticPaths, considerar que este metodo renderizara el total de paginas, por lo que no conviene si tengo miles o millones de paginas
export const getStaticPaths = async () => {
  const launches = await getLatestLaunches();

  return launches.map(launch => ({
    params: { id: launch.id },
  }));
};
---

<article>
  {launch?.id}
</article>
